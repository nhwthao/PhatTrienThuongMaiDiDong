<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".BookingHospital">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:weightSum="4">

        <LinearLayout
            android:id="@+id/layoutSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/botron_text"
            android:gravity="center">

            <ImageView
                android:id="@+id/imvSearch"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="0.25"
                android:src="@drawable/ic_baseline_search_24" />

            <EditText
                android:id="@+id/edtSearch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.5"
                android:hint="Tìm kiếm ở đây" />

            <ImageButton
                android:id="@+id/imvAddress"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="0.25"
                android:background="@drawable/botron_imv"
                android:src="@drawable/ic_baseline_location_on_24" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:paddingLeft="15dp">

            <ImageButton
                android:id="@+id/imvBack"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_baseline_keyboard_double_arrow_left_24"
                android:layout_gravity="center_vertical"
                android:backgroundTint="@color/background"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tất cả Bệnh Viện:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingStart="15dp"/>
        </LinearLayout>
        <ListView
            android:id="@+id/lvBenhVien"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@drawable/divider"
            android:padding="20dp"
            android:scrollbars="none"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
</RelativeLayout>