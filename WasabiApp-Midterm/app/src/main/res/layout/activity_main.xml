<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:padding="20dp"
    android:background="@drawable/background"
    android:gravity="top">
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/logo2"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tài khoản/SĐT:"
        android:textSize="24sp"
        android:textColor="@color/black" />
    <EditText
        android:id="@+id/edtTaikhoan"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Nhập số điện thoại"
        android:textSize="24sp"
        android:background="@drawable/shape_edittext"
        android:drawableLeft="@drawable/ic_outline_verified_user_24"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:layout_marginTop="10dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mật khẩu:"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"/>
    <EditText
        android:id="@+id/edtMatkhau"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Nhập mật khẩu"
        android:textSize="24sp"
        android:inputType="textPassword"
        android:background="@drawable/shape_edittext"
        android:drawableLeft="@drawable/ic_outline_vpn_key_24"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:layout_marginTop="10dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:id="@+id/layoutQuenMatKhau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quên mật khẩu"
                android:textStyle="italic"
                android:textSize="18sp"
                android:textColor="@color/purple_700" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/purple_700"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layoutTaoTaiKhoan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tạo tài khoản"
                android:textStyle="italic"
                android:textSize="18sp"
                android:textColor="@color/purple_700" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/purple_700"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btnDangnhap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng nhập"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/blue"
        android:layout_gravity="center"
        android:layout_marginTop="10dp" />

</LinearLayout>